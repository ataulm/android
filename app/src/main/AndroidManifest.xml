<manifest
  package="com.ataulm.basic"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <application
    android:allowBackup="true"
    android:icon="@drawable/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/AppTheme">
    <activity android:name=".ShowActivity" />
    <activity android:name=".AccessibleShowActivity" />
    <activity android:name=".AllFocusableShowActivity" />

    <activity-alias
      android:name="activity.primary_launcher"
      android:targetActivity=".ShowActivity"
      android:label="TV-Bad">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity-alias>

    <activity-alias
      android:name="activity.secondary"
      android:targetActivity=".AccessibleShowActivity"
      android:label="TV-Good">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity-alias>

    <activity-alias
      android:name="activity.tertiary"
      android:targetActivity=".AllFocusableShowActivity"
      android:label="TV-Annoying">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity-alias>
  </application>

</manifest>
