<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    tools:layout_height="wrap_content"
    tools:layout_width="wrap_content"
    tools:parentTag="com.androidasync.BurgerView">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:tint="#EBC293"
        android:tintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/bun_bottom" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="40dp"
        android:tint="#816340"
        android:tintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/patty" />

    <ImageView
        android:id="@+id/cheeseImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:layout_marginBottom="60dp"
        android:tint="#FFD862"
        android:tintMode="multiply"
        app:srcCompat="@drawable/cheese" />

    <ImageView
        android:id="@+id/sauceImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="120dp"
        android:tint="@color/material_red_500"
        android:tintMode="multiply"
        app:srcCompat="@drawable/sauce" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="150dp"
        android:tint="#EBC293"
        android:tintMode="multiply"
        app:srcCompat="@drawable/bun_top" />

</merge>