<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.ataulm.basic">

  <application
    android:allowBackup="true"
    android:label="@string/app_name"
    android:icon="@drawable/ic_launcher"
    android:theme="@style/AppTheme">

    <activity android:name=".TopLevelActivity" />

    <activity-alias
      android:name="activity.primary_launcher"
      android:targetActivity=".TopLevelActivity">

      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>

      <intent-filter>
        <action android:name="android.intent.action.VIEW" />
        <category android:name="android.intent.category.DEFAULT" />
        <data android:mimeType="vnd.android.cursor.item/vnd.${packageName}.toplevel" />
      </intent-filter>

    </activity-alias>

    <provider
      android:name=".NavigationContentProvider"
      android:authorities="${packageName}"
      android:exported="false" />

  </application>

</manifest>
