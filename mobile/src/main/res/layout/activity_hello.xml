<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:ignore="RtlHardcoded">

  <Button
    android:id="@+id/hello_button_toggle_visibility"
    android:layout_width="wrap_content"
    android:layout_height="48dp"
    android:layout_margin="16dp"
    android:text="@string/hello_toggle_visibility" />

  <TextView
    android:id="@+id/hello_text_instructions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="48dp"
    android:paddingTop="48dp"
    android:paddingRight="48dp"
    android:paddingBottom="16dp"
    android:text="@string/hello_instructions" />

  <Button
    android:id="@+id/hello_button_hello_android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:text="@string/hello_android" />

</LinearLayout>
