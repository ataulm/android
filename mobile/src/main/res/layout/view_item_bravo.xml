<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="8dp"
  android:background="@android:color/black"
  android:focusable="true">

  <TextView
    android:id="@+id/item_bravo_text_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:textSize="20sp" />

  <ImageView
    android:id="@+id/item_bravo_button_star"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_alignParentRight="true"
    android:src="@drawable/ic_star_empty" />

  <ImageView
    android:id="@+id/item_bravo_image_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:importantForAccessibility="no"
    android:clickable="true"
    android:layout_below="@id/item_bravo_button_star" />

  <TextView
    android:id="@+id/item_bravo_text_description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_alignTop="@id/item_bravo_image_title"
    android:layout_toRightOf="@id/item_bravo_image_title" />

</RelativeLayout>
