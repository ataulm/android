<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/next_up_item_episode_background"
  android:focusable="true"
  android:orientation="horizontal">

  <ImageView
    android:id="@+id/next_up_episode_image_titlecard"
    android:layout_width="150dp"
    android:layout_height="96dp" />

  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="100"
    android:orientation="vertical">

    <TextView
      android:id="@+id/next_up_episode_text_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/next_up_episode_text_number"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/next_up_episode_text_airdate"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  </LinearLayout>

  <ImageView
    android:id="@+id/next_up_episode_image_watched"
    android:layout_width="48dp"
    android:layout_height="48dp" />

</LinearLayout>
